{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@common/*": [
        "src/common/*"
      ],
      "@public/*": [
        "public/*"
      ],
      "@main/*": [
        "src/main/*"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@renderer*/": [
        "src/renderer/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ]
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "esnext",
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules"
  ]
}
